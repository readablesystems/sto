$(OBJ)/xxhash.o: third-party/xxHash/xxhash.c
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) -c -o $@ $<

%.S: %.o
	objdump -S $< > $@

