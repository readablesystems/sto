		   wiki_bench \
		   voter_bench \
		   $(UNIT_PROGRAMS)

all: $(PROGRAMS)

unit: $(UNIT_PROGRAMS)

act-unit: $(ACT_UNIT_PROGRAMS)

check: act-unit
	@for i in $(ACT_UNIT_PROGRAMS); do echo ./$$i; ./$$i || exit 1; done

%.o: %.c config.h $(DEPSDIR)/stamp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(DEPCFLAGS) -include config.h -c -o $@ $<

